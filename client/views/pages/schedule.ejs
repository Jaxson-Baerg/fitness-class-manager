<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">

    <header id="header" class="fixed-top">
      <%- include('../partials/header'); %>
    </header>

    <main>
      <div class="jumbotron">
        <div class="row portfolio-container">
          <% classList.forEach(obj => { %>
            <div class="<%= obj.time_to_class.days < 0 || obj.time_to_class.hours < 0 || obj.time_to_class.minutes < 0 || obj.spots_remaining < 1 ? 'col-lg-4 col-md-6 portfolio-item wow closed-class' : 'col-lg-4 col-md-6 portfolio-item wow open-class'; %>" >
              <% if (obj.time_to_class.days < 0 || obj.time_to_class.hours < 0 || obj.time_to_class.minutes < 0 || obj.spots_remaining < 1) { %>
                <h2>Closed</h2>
              <% } %>
              <h3><%= formatDate(obj.start_datetime); %></h3>
              <h3><%= formatTime(obj.start_datetime, false); %> - <%= formatTime(obj.end_datetime, true); %></h3>
              <p>Spots Remaining: <%= obj.spots_remaining %></p>
              <p>Credit Cost: <%= obj.credit_cost %></p>
              <% if (obj.time_to_class.hours > -1 || obj.spots_remaining < 1) { %>
                <form action="/schedule/register/confirm" method="POST" >
                  <input name="class_type_id" value=<%= obj.class_type_id %> hidden />
                  <input name="class_id" value=<%= obj.class_id %> hidden />
                  <input name="credits" value=<%= obj.credit_cost %> hidden />
                  <button type="submit">Register</button>
                </form>
              <% } %>
            </div>
          <% }); %>
        </div>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>

  </body>
</html>