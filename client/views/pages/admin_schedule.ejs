<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">

    <header id="header" class="fixed-top">
      <%- include('../partials/header'); %>
    </header>

    <main>
      <div class="jumbotron">
        <h1><%= classType.name %></h1>
        <div class="row portfolio-container">
          <% classList.forEach(obj => { %>
            <div class="<%= obj.time_to_class.hours < 0 ? 'col-lg-4 col-md-6 portfolio-item wow closed-class' : 'col-lg-4 col-md-6 portfolio-item wow open-class'; %>" >
              <div class="portfolio-info">
                <h3><%= formatDate(obj.start_datetime); %></h3>
                <h3><%= formatTime(obj.start_datetime, false); %> - <%= formatTime(obj.end_datetime, true); %></h3>
                <p>Spots Remaining: <%= obj.spots_remaining %></p>
                <p>Credit Cost: <%= obj.credit_cost %></p>
                <% if (obj.time_to_class.hours < 0) { %>
                  <h4>Closed</h4>
                <% } %>
                <div class="fix-to-bottom">
                  <a href=<%= `/admin/class/${obj.class_id}` %>>View Students</a>
                  <button class="btn link-btn">Edit</button>
                  <button class="btn link-btn">Delete</button>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>

  </body>
</html>